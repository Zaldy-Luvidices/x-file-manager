<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_folder"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp" />

    <TextView
        android:id="@+id/txtFilename"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/imgIcon"
        android:ellipsize="end"
        android:fontFamily="sans-serif-condensed"
        android:singleLine="true"
        android:text="Filename.ext"
        android:textColor="#ffffffff"
        android:textSize="13dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/imgIcon" />

    <TextView
        android:id="@+id/txtSize"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtFilename"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_toRightOf="@id/imgIcon"
        android:fontFamily="sans-serif-condensed"
        android:text="S: 1.5G"
        android:textColor="#ffaaaaaa"
        android:textSize="11dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/imgIcon" />

    <RelativeLayout
        android:id="@+id/relBanner"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="200dp"
        android:layout_toRightOf="@id/imgIcon"
        android:background="@drawable/back_file_list_banner"
        android:paddingLeft="12dp"
        android:layout_marginStart="200dp"
        android:layout_toEndOf="@id/imgIcon"
        android:paddingStart="12dp">

        <ImageView
            android:id="@+id/imgInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_pageview"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp" />

        <ImageView
            android:id="@+id/imgOptions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/imgInfo"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_more_v"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Mon, Jan-01-1994"
            android:textColor="#ffaaaaaa"
            android:textSize="11dp" />
    </RelativeLayout>

    <View
        android:id="@+id/viewSepTop"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/imgIcon"
        android:background="#ff333333"
        android:visibility="gone" />

    <View
        android:id="@+id/viewSepBottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/imgIcon"
        android:background="#ff333333"
        android:visibility="visible" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="false" android:tint="#aa000000" />

    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate itself when coming out of pressed state. -->
    <item android:state_enabled="false" android:state_focused="true" android:state_pressed="true" android:tint="#aa000000" />
    <item android:state_enabled="false" android:state_focused="true" android:tint="#aa000000" />

    <item android:drawable="@drawable/back_list_row_selected" android:state_focused="true" android:state_pressed="true" />
    <item android:drawable="@drawable/back_list_row_selected" android:state_focused="false" android:state_pressed="true" />

    <item android:drawable="@drawable/back_list_row_selected" android:state_focused="true" />
</selector>
